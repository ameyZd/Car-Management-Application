@model ViewModels.AvailablePremiumCarsDataViewModel

@{
    ViewBag.Title = "Select PremiumCars";
    var listOfCars = ViewBag.list as List<string>;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Select Premium Cars</title>
</head>
<body style="background-color: #f5f5f5;">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Select Premium Cars</h2>

        <a href="@Url.Action("RefreshAvailablePremiumCars", "PremiumCar")" class="btn btn-primary" style="color: white;">
            Refresh all premium cars
        </a>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card mx-auto" style="max-width: 400px; background-color: #fffacd; border-radius: 10px; box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <h4 class="card-title">Premium Cars</h4>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.CarOwnerName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.CarOwnerName, new { htmlAttributes = new { @class = "form-control", @required = true } })
                        @Html.ValidationMessageFor(model => model.CarOwnerName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CarOwnerEmail, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.CarOwnerEmail, new { htmlAttributes = new { @class = "form-control", @required = true, type = "email" } })
                        @Html.ValidationMessageFor(model => model.CarOwnerEmail, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedCar, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.SelectedCar, new SelectList(listOfCars), "- Please select a Car -", new { @class = "form-control", @required = true })
                        @Html.ValidationMessageFor(model => model.SelectedCar, "", new { @class = "text-danger" })
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Book the car <i class="fa fa-arrow-right"></i></button>

                        <a href="@Url.Action("Index", "Car")" class="btn btn-secondary ml-2"><i class="fa fa-backward"></i> Back to list</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
